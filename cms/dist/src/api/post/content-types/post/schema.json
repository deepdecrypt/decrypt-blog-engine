{
    "kind": "collectionType",
    "collectionName": "posts",
    "info": {
        "singularName": "post",
        "pluralName": "posts",
        "displayName": "Post"
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "Title": {
            "type": "string"
        },
        "Slug": {
            "type": "uid",
            "targetField": "Title"
        },
        "Content": {
            "type": "blocks"
        },
        "Thumbnail": {
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ],
            "type": "media",
            "multiple": false
        }
    }
}
